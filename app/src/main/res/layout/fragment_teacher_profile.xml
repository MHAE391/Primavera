<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.m391.primavera.user.father.teacher.TeacherProfileViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".user.father.teacher.TeacherProfileFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginEnd="@dimen/margin_20"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5">

            <ImageButton
                android:id="@+id/arrow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="start|center"
                android:background="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="@{()-> viewModel.backToSearch()}"
                android:src="@drawable/ic_baseline_arrow_back_24"
                tools:ignore="ContentDescription,UnusedAttribute,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/profile"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_25"
                android:textStyle="italic|bold"
                android:visibility="visible"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:gravity="center"
                    android:text='@{viewModel.teacherData.firstName + " " + viewModel.teacherData.lastName}'
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_20"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:importantForAccessibility="no"
                    android:src="@drawable/profile"
                    app:imageByteArray="@{viewModel.teacherData.image}"
                    app:imageUrl="@{viewModel.teacherData.imageUri}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_25"
                    android:layout_marginEnd="@dimen/margin_25"
                    android:background="@drawable/table_border"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5"
                        android:layout_weight="1"
                        android:background="@drawable/row_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/padding_5"
                            android:text="@string/subjects"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold|italic"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:padding="@dimen/padding_10"
                            android:text="@{viewModel.teacherSubjects}"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5"
                        android:layout_weight="1"
                        android:background="@drawable/row_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/padding_5"
                            android:text="@string/academics"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold|italic"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:padding="@dimen/padding_10"
                            android:text="@{viewModel.teacherAcademicYears}"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5"
                        android:layout_weight="1"
                        android:background="@drawable/row_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/padding_5"
                            android:text="@string/age"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold|italic"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:padding="@dimen/padding_10"
                            android:text="@{viewModel.teacherAge}"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5"
                        android:layout_weight="1"
                        android:background="@drawable/row_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/padding_5"
                            android:text="@string/phones"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold|italic"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start|center"
                            android:padding="@dimen/padding_10"
                            android:text="@{viewModel.teacherData.phone}"
                            android:textSize="@dimen/font_size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5"
                        android:layout_weight="1"
                        android:background="@drawable/row_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/padding_5"
                            android:text="@string/rate"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold|italic"
                            tools:ignore="NestedWeights" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/teacher_rate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/padding_50"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true"
                            tools:cardCornerRAdius="5dp">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:numStars="5"
                                android:rating="@{viewModel.teacherData.rate.floatValue()}"
                                android:stepSize="1" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_5"
                        android:layout_weight="1"
                        android:background="@drawable/row_border"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|start"
                            android:padding="@dimen/padding_5"
                            android:text="@string/location"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_size_18"
                            android:textStyle="bold|italic"
                            tools:ignore="NestedWeights" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/teacher_location"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/padding_50"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="10dp"
                            app:cardUseCompatPadding="true"
                            tools:cardCornerRAdius="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/show_on_map"
                                android:textAlignment="center"
                                android:textColor="#0F228C"
                                android:textSize="@dimen/font_size_14"
                                android:textStyle="bold|normal" />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:background="@drawable/background_button"
                    android:gravity="center"
                    android:text="@string/chat"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>